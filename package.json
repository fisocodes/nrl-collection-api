{
	"name": "nrl-collection-api",
	"version": "0.1.0",
	"description": "API for NRL Collection project",
	"main": "index.js",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest --verbose"
	},
	"author": "Oscar Figueroa",
	"license": "ISC",
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@nestjs/testing": "^10.3.10",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.9",
		"@types/nodemailer": "^6.4.15",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.7",
		"prisma": "^5.16.1",
		"ts-jest": "^29.1.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.3"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.10",
		"@nestjs/core": "^10.3.10",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/platform-express": "^10.3.10",
		"@nestjs/swagger": "^7.4.0",
		"@prisma/client": "^5.16.1",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"nanoid": "^3.3.7",
		"nodemailer": "^6.9.14",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
